{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2023"
    ],
    "module": "node16",
    "outDir": "build",
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@/interfaces/*": [
        "./src/interfaces/*"
      ],
      "@/repositories/*": [
        "./src/repositories/*"
      ],
      "@/routes/*": [
        "./src/routes/*"
      ],
      "@/middlewares/*": [
        "./src/middlewares/*"
      ],
      "@/usecases/*": [
        "./src/usecases/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ]
    }
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules"
  ]
}