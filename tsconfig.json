{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2023"
    ],
    "module": "node16",
    "outDir": "build",
    "baseUrl": "/",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules"
  ]
}